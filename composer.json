{
    "name": "zendframework/zend-expressive-template",
    "description": "Template subcomponent for Expressive",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "expressive",
        "template"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev",
            "dev-develop": "1.1-dev"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "zendframework/zend-coding-standard": "~1.0.0",
        "malukenho/docheader": "^0.1.5"
    },
    "autoload": {
      "psr-4": {
        "Zend\\Expressive\\Template\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "ZendTest\\Expressive\\Template\\": "test/"
      }
    },
    "suggest": {
        "zendframework/zend-expressive-platesrenderer": "^1.2 to use the Plates template renderer",
        "zendframework/zend-expressive-twigrenderer": "^1.2.1 to use the Twig template renderer",
        "zendframework/zend-expressive-zendviewrenderer": "^1.2.1 to use the zend-view PhpRenderer template renderer"
    },
    "scripts": {
        "check": [
            "@license-check",
            "@cs-check",
            "@test"
        ],
        "upload-coverage": "coveralls -v",
        "cs-check": "phpcs --colors",
        "cs-fix": "phpcbf --colors",
        "license-check": "docheader check src/ test/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
