{
    "name": "mezzio/mezzio-template",
    "description": "Template subcomponent for Mezzio",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "template"
    ],
    "homepage": "https://mezzio.dev",
    "support": {
        "docs": "https://docs.mezzio.dev/mezzio-template/",
        "issues": "https://github.com/mezzio/mezzio-template/issues",
        "source": "https://github.com/mezzio/mezzio-template",
        "rss": "https://github.com/mezzio/mezzio-template/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev",
            "dev-develop": "1.1-dev"
        }
    },
    "require": {
        "php": ">=5.5",
        "laminas/laminas-zendframework-bridge": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "suggest": {
        "mezzio/mezzio-laminasviewrenderer": "^0.1 to use the laminas-view PhpRenderer template renderer",
        "mezzio/mezzio-platesrenderer": "^0.1 to use the Plates template renderer",
        "mezzio/mezzio-twigrenderer": "^0.1 to use the Twig template renderer"
    },
    "autoload": {
        "psr-4": {
            "Mezzio\\Template\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MezzioTest\\Template\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "coveralls": "coveralls",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    },
    "replace": {
        "zendframework/zend-expressive-template": "self.version"
    }
}
